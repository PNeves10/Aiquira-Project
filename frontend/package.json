{
  "name": "aiquira-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:ci": "jest --ci --coverage && playwright test",
    "test:performance": "playwright test performance/",
    "test:accessibility": "jest --config jest.accessibility.config.js",
    "test:accessibility:monitor": "jest --config jest.accessibility.config.js --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:a11y": "axe --exit --chrome-options=\"--headless\" http://localhost:3000",
    "test:a11y:ci": "axe --exit --chrome-options=\"--headless\" --tags wcag2a,wcag2aa,wcag2aaa http://localhost:3000",
    "lighthouse": "lhci autorun",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "preview": "vite preview"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.0.1",
    "@tanstack/react-query": "^5.74.7",
    "axios": "^1.9.0",
    "chart.js": "^4.4.9",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.9.2",
    "next": "^13.2.4",
    "next-auth": "^4.22.1",
    "next-i18next": "^15.4.2",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-datepicker": "^8.3.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.56.1",
    "react-hot-toast": "^2.4.0",
    "react-i18next": "^15.5.1",
    "tailwindcss": "^4.1.4",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.8.2",
    "@axe-core/react": "^4.8.2",
    "@lhci/cli": "^0.14.0",
    "@storybook/addon-a11y": "^8.6.12",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/blocks": "^8.6.11",
    "@storybook/react": "^8.6.12",
    "@storybook/testing-library": "^0.2.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.4.0",
    "@types/node": "^22.15.3",
    "@types/react": "^18.0.33",
    "@types/react-datepicker": "^6.2.0",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "autoprefixer": "^10.4.14",
    "axe-core": "^4.8.2",
    "eslint": "^9.25.1",
    "eslint-config-next": "^15.3.1",
    "jest": "^29.4.3",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.4.3",
    "lighthouse": "^12.6.0",
    "playwright": "^1.52.0",
    "postcss": "^8.4.23",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{ts,tsx}",
      "!src/**/*.test.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
