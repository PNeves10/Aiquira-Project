# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ai-quira

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=24h

# Sentry Configuration
SENTRY_DSN=your_sentry_dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3000
REACT_APP_SENTRY_DSN=your_sentry_dsn

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# Security Configuration
CORS_ORIGIN=http://localhost:3000
ENABLE_RATE_LIMIT=true
ENABLE_SECURITY_HEADERS=true

# Backend
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aiquira
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:5000

# AI Services
OPENAI_API_KEY=your-openai-api-key-here
PYTHONUNBUFFERED=1

# Redis
REDIS_URL=redis://localhost:6379

# Email (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# File Storage
AWS_BUCKET_NAME=aiquira-assets

# Payment Gateway (example for Stripe)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret 